page {
  height: 100%;
  width: 100%;
  background: #f5f5f5;
}

.serOredBox {
  width: 100%;
  margin-bottom: 20rpx;
  background: #fff;
  padding: 0 12px 10px;
  border-top: 1px solid #fbfbfb;
}

.serOredBox .title{
  /* background-color: aquamarine; */
  height: 100rpx;
  line-height: 120rpx;
 
}
.detail_img1 {
  width:55rpx;
  height:38rpx;
}

.serOredBox .title .text {
  margin-left: 11rpx;
  font-size: 16px;
  font-weight: bold;
  vertical-align: 2px;
}

.serOredBox .title .status {
  font-size: 14px;
  color: #E60020;
}

.resbody{
  background-color: #fff;
  display: flex;
}
.resbody .photo {
  width:180rpx;
  height:180rpx;
  border-radius:10rpx;
}

.resbody .resInfo{
  padding-bottom: 10px;
  flex: 1;
  font-size: 14px;
 
}

.resbody .resInfo.notBor {
  border-bottom: 0px;
}

.resbody .resInfo .inoftext{
  line-height: 28px;
  display: flex;
}
.serOredBox .resInfo .inoftext .textTitle{
  color: #666;
  min-width: 140rpx;
}

.foot{
  border-top: 1px solid #f5f5f5;
  height: 60px;
  padding-top: 15px;
  background-color: #fff;
}

.foot .btn {
  width: 90px;
  height: 65rpx;
  float: right;
  margin-right: 20px;
  font-size: 13px;
  background-color: #fff;
  border-radius: 5px;
  border: 1px solid #ccc;
}
.foot .endBtn {
  border-color: #E60020;
  color: #E60020;
}

.detail_box {
  margin-top: 3rpx;
  background: #fff;
}

.dataInfo{
  padding: 0 12px 14px;
  width: 100%;
  background-color: #fff;
}

.dataInfo .title {
  height: 50px;
  line-height: 50px;
  font-size: 16px;
  font-weight: 700;
  border-bottom: 1px solid #f5f5f5;
}
.dataInfo .resInfo{
  margin-top: 14px;
}
.dataInfo .inoftext {
  line-height: 28px;
  display: flex;
}

.dataInfo .inoftext .textTitle{
  min-width: 240rpx;
}














.detail_head {
  display: flex;
  align-items: center;
  padding: 25rpx;
  height: 150rpx;
  width: 100%;
}

.detail_head text {
  margin-left: 25rpx;
  font-weight: 549;
  font-size: 40rpx;
}

/* top */

.detail_img2 {
  width: 160rpx;
  height: 160rpx;
}

.detail_top {
  padding: 25rpx;
  display: flex;
}

.top_fixedData {
  margin-left: 60rpx;
  font-size: 32rpx;
  color: #666;
  line-height: 50rpx;
}

.top_changeData {
  font-size: 32rpx;
  margin-left: 25rpx;
  line-height: 50rpx;
}

/* middle */

.detail_middle {
  background: #fff;
  margin-top: 20rpx;
}

.head {
  height: 90rpx;
  padding-top: 15rpx;
  font-weight: 549;
  font-size: 40rpx;
  margin: 0 25rpx;
  border-bottom: 1px solid #f5f5f5;
}

.user_fixedData {
  padding-left: 25rpx;
}

.user_changeData {
  margin-left: 40rpx;
}

.middle_box {
  font-size: 32rpx;
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

/* btn */

.btn {
  height: 70rpx;
  width: 160rpx;
  border-radius: 10rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
}

.btn_box {
  width: 100%;
  height: 100rpx;
  padding: 25rpx;
  background: #fff;
  display: flex;
  justify-content: flex-end;
}
.btn_connect{
  margin-right: 25rpx;
  border: #ccc 1px solid;
}
.btn_service{
  border: 1px solid #E60020;
  color: #E60020;
}
