<!--pages/myDetail/myDetail.wxml-->
<view class="myDetail">
  <view class="weui-flex">
    <view class="weui-flex__item">
      <view class="left">
        <view class="placeholder">
          <view class='list-msg' bindtap='bindShowMsg'>
            <text>{{tihuoWay}}</text>
            <image class="select-img" src='../../images/下拉.png'></image>
          </view>
        </view>
      </view>
    </view>
    <view class="right">
      <view class="placeholder">
        <text>总数：{{data.totalCount}}\n</text>
        <text>总时长：{{data.totalHour}}H</text>
      </view>
    </view>
  </view>
  <view class="page__hd">
    <view class="weui-form-preview" wx:for="{{data.employCompletMyWorkOrderServerDetailResultVOList}}">
      <view class="page__title">{{item.serverName}}</view>
      <image class="page-img" src='../../images/组 5.png'></image>
      <view class="page__desc">
        <text class="page-label">服务客户：</text>
        <text class="page-value">{{item.userName}}</text>
      </view>
      <view class="page__desc">
        <text class="page-label">服务地址：</text>
        <text>{{item.house}}{{item.aHousingEstateName}}{{item.houseNo}}</text>
      </view>
      <view class="page__desc">
        <text class="page-label">服务次数：</text>
        <text>{{item.serveredTimesCompose}}次</text>
      </view>
      <view class="page__desc">
        <text class="page-label">预约时间：</text>
        <text>{{item.appointServerDate}} {{item.timeIntervalName}}</text>
      </view>
      <view class="page__desc">
        <text class="page-label">服务时间：</text>
        <text>{{item.serveredDate}} {{item.serveredTimeIntervalName}}</text>
      </view>
      <view class="page__desc">
        <text class="page-label">服务时长：</text>
        <text>{{item.serverDuration}}H</text>
      </view>
    </view>
  </view>
  <!-- 下拉需要显示的列表 -->
  <view class="select_box" wx:if="{{select}}">
    <view class="select_one" bindtap="mySelect" data-value="CURENT_MONTH" data-name="本月">本月</view>
    <view class="select_one" bindtap="mySelect" data-value="PRE_MONTH" data-name="上月">上月</view>
  </view>
</view>