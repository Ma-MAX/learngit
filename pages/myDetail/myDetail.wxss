/* pages/myDetail/myDetail.wxss */

.myDetail {
  background: #f5f5f5;
}

.left .placeholder {
  padding: 50rpx 0 4rpx 50rpx;
  font-size: 30rpx;
}

.right {
  padding: 29rpx 28rpx 4rpx 0;
  font-size: 28rpx;
}

.list-msg {
  width: 170rpx;
  height: 70rpx;
  background: #fff;
  padding: 21rpx 33rpx 21rpx 25rpx;
  border-radius: 35rpx;
  display: initial;
}

.select-img {
  height: 12rpx;
  width: 20rpx;
  margin-left: 37rpx;
  margin-bottom: 4rpx;
}

.weui-form-preview {
  margin-top: 20rpx;
  padding-bottom: 18rpx;
}

.page__title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 41rpx 0 40rpx 25rpx;
}

.page__desc {
  padding: 0 0 23rpx 229rpx;
  font-size: 28rpx;
}

.page-label {
  color: #666;
}

.page-img {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  margin-left: 23rpx;
  z-index: 1;
}

.select_box {
  background-color: #fff;
  border: 1px solid #627ca8;
  border-radius: 35rpx;
  padding: 0 25rpx;
  width: 170rpx;
  position: absolute;
  top: 122rpx;
  left: 25rpx;
  z-index: 10;
  overflow: hidden;
  animation: myfirst 0.5s;
  font-size: 30rpx;
}

@keyframes myfirst {
  from {
    height: 0rpx;
  }

  to {
    height: 160rpx;
  }
}

