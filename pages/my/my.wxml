<!--pages/my/my.wxml-->
<view class="my">
  <view style="background:#ffffff;">
    <view class="container">
      <view>
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo}}" mode="cover"></image>
      </view>
      <view class="userinfo-nickname">
        <view class="left">
          <text style="font-size:32rpx">{{infoData.name}}</text>
          <text class="area">{{infoData.companyName}}</text>
        </view>
        <view class="right">
          <text style="font-size:32rpx">{{infoData.mobile}}</text>
          <text class="area">广州天河区门店</text>
        </view>
      </view>
    </view>
    <view class="divLine"></view>

    <view class="title-container">
      <text>服务项目</text>
    </view>

    <view class="service-list">
      <view wx:for="{{infoData.serviceItemList}}">
        <view class="text-list">
          <text>{{item.serviceName}}</text>
        </view>
        <view wx:if="{{index < infoData.serviceItemList.length-1}}" class="listLine"></view>
      </view>
    </view>
  </view>
  <view class="today">
    <view class="today-container" hover-class="weui-cell_active" bindtap="detailTo">
      <text>已完成服务单</text>
      <image class="today-to" src="../../images/右箭头.png"></image>
    </view>
    <view class="text-container">
      <text>总服务单：{{myData.totalCount}}</text>
      <text style="margin-left:92rpx;">服务单：{{myData.serverNormalCount}}</text>
      <text style="margin-left:92rpx;">售后单：{{myData.refundCount}}</text>
    </view>
  </view>
  <view class="cancel">
    <button class="cancel-button">退出登录</button>
  </view>
</view>