page{
  height: 100%;
  width: 100%;
}
.list{
background: #fff;
white-space: nowrap;
display: flex;
padding: 5rapx;
}
.list_item{
flex-grow: 2;
color: #666666;
padding:20rpx 30rpx;
font-size: 30rpx;
display: inline-block;
}
.list_item.active{
  border-bottom: 5rpx solid #E60020;
}

/*  */
.backGround{
  height: 100%;
  width: 100%;
  background-color: #f5f5f5;
}
.service_box{
  position: relative;
  width: 100%;
  background: #fff;
  border-radius: 10rpx;
  margin: 40rpx 0 ;
}
.box_head{
  display: flex;
  height: 120rpx;
  width: 100%;
  padding: 30rpx;
  align-items:center;
}
.box_head text{
  font-size: 40rpx;
  margin-left: 15rpx;
}
.service_list{
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items:center;
  background: #fff;
  padding: 0 20rpx;
  line-height: 50rpx;
}
.text_box{
  display: flex;
}
.serviceOder_list{
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #666;
}

image{
  height: 48rpx;
  width: 68rpx;
}
.photo{
  height: 160rpx;
  width: 160rpx;
}
/* 取消状态 */
.cancel_state{
  position: absolute;
  right: 30rpx;
  top: 40rpx;
  font-size: 32rapx;
  color: #E60020;
}
.control{
  display: none;
}

/* 按钮样式 */
.btn{
height: 60rpx;
  width: 160rpx;
  border-radius: 10rpx;
  line-height: 60rpx;
  text-align: center;
  background: #fff;
  font-size: 32rpx;
}
.btn_confirm{
  color: #E60020;
  border: 1px solid #E60020;
  margin-right: 20rpx;
}
.btn_cancel{
  color: #ccc;
  border: 1px solid #ccc;
}
.btn_box{
  width: 100%;
  padding: 20rpx;
  display: flex;
  justify-content:flex-end;
}