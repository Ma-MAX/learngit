page {
  height: 100%;
  width: 100%;
  background: #f5f5f5;
}

.detail_box {
  margin-top: 3rpx;
  background: #fff;
}

.detail_img1 {
  width: 65rpx;
  height: 45rpx;
}

.detail_head {
  display: flex;
  align-items: center;
  padding: 25rpx;
  height: 150rpx;
  width: 100%;
}

.detail_head text {
  margin-left: 25rpx;
  font-weight: 549;
  font-size: 40rpx;
}

/* top */

.detail_img2 {
  width: 160rpx;
  height: 160rpx;
}

.detail_top {
  padding: 25rpx;
  display: flex;
}

.top_fixedData {
  margin-left: 60rpx;
  font-size: 32rpx;
  color: #666;
  line-height: 50rpx;
}

.top_changeData {
  font-size: 32rpx;
  margin-left: 25rpx;
  line-height: 50rpx;
}

/* middle */

.detail_middle {
  background: #fff;
  margin-top: 20rpx;
}

.head {
  height: 90rpx;
  padding-top: 15rpx;
  font-weight: 549;
  font-size: 40rpx;
  margin: 0 25rpx;
  border-bottom: 1px solid #f5f5f5;
}

.user_fixedData {
  padding-left: 25rpx;
}

.user_changeData {
  margin-left: 40rpx;
}

.middle_box {
  font-size: 32rpx;
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

/* btn */

.btn {
  height: 70rpx;
  width: 160rpx;
  border-radius: 10rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
}

.btn_box {
  width: 100%;
  height: 100rpx;
  padding: 25rpx;
  background: #fff;
  display: flex;
  justify-content: flex-end;
}
.btn_connect{
  margin-right: 25rpx;
  border: #ccc 1px solid;
}
.btn_service{
  border: 1px solid #E60020;
  color: #E60020;
}
